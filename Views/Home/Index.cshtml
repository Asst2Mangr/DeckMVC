@model List<Deck>
@{
    ViewBag.Title = "My Decks";
}

<h2>Deck List</h2>
<a asp-controller="Deck" asp-action="Add">Add New Deck</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr><th>Name</th><th>Count</th></tr>
    </thead>
    <tbody>
        @foreach (var deck in Model)
        {
            <tr>
                <td>@deck.DeckName</td>
                <td>@deck.DeckCount</td>
            </tr>
            <td>
            <a asp-controller="Deck" asp-action="Edit"
               asp-route-id="@deck.DeckID"
               asp-route-slug="@deck.Slug">Edit</a>
            <a asp-controller="Deck" asp-action="Delete"
               asp-route-id="@deck.DeckID"
               asp-route-slug="@deck.Slug">Delete</a>
            </td>
        }
    </tbody>
</table>